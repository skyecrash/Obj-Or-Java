import java.lang.StringBuilder;
  
public class Lab6{
  
  public static int countSpaces(String s) {
    int spaces = 0;
    for(int i = 0; i <= (s.length() - 1); i = i + 1) {
      if(s.charAt(i) == ' ') {
        spaces = spaces + 1;
        }
        else {
      }
    
    }
    return spaces;
  }
  
  
  public static String removeSpaces(String s) {
    StringBuilder newString = new StringBuilder();
    for(int i = 0; i <= (s.length() - 1); i = i + 1) {
      if(s.charAt(i) != ' ') {
        newString.append(s.charAt(i));
      } else {
      }
    }
    String str = newString.toString();
    return str;
  }
  
  
  public static void printEveryNthChar(String s, int n) {
    for(int i = 0; i <= (s.length() - 1); i = i + n) {
      System.out.print(s.charAt(i));
      System.out.print(' ');
    }
    System.out.println();
  }
  
  
  public static void printDigits(int i) {
    String digits = Integer.toString(i);
    int c = (digits.length() - 1); 
    while(c >= 0) {
      if(c > 0) {
        System.out.print(digits.charAt(c));
        System.out.print(", ");
        c = c - 1;
      } else {
        System.out.print(digits.charAt(c));
        c = c - 1;
      }
    }
    System.out.println();
  }
      
      
      
      
    
    
     
}
        
      
      